{
  "name": "@sitespeed.io/plugin-lighthouse",
  "version": "1.2.0",
  "bin": {
    "sitespeed.io-plugin-lighthouse": "./index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "Lighthouse plugin for sitespeed.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sitespeedio/plugin-lighthouse.git"
  },
  "keywords": [
    "sitespeed.io",
    "lighthouse",
    "webperf",
    "perfmatters"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sitespeedio/plugin-lighthouse/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "6.2.2",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.4",
    "lint-staged": "9.2.4",
    "prettier": "1.18.2",
    "pug-lint": "2.6.0"
  },
  "dependencies": {
    "chrome-launcher": "0.14.1",
    "lighthouse": "9.3.1"
  },
  "scripts": {
    "lint": "eslint . && npm run pug-lint",
    "lint:fix": "eslint . --fix",
    "eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "pug-lint": "pug-lint lighthouse.pug"
  }
}
